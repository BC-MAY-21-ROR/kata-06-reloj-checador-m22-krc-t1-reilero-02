<%= form_with model: employee do |f| %>

  <div>
    <%= f.label 'Name' %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label 'Email' %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label 'Position' %>
    <%= f.text_field :position %>
  </div>

  <div>
    <%= f.label 'Private number' %>
    <%= f.text_field :private_number %>
  </div>

  <% if current_page?(edit_employee_path(employee.id || 0)) %>
    <div>
      <%= f.label 'Active' %>
      <%= f.check_box :active %>
    </div>
  <% end %>

  <%= f.submit %>
<% end %>
