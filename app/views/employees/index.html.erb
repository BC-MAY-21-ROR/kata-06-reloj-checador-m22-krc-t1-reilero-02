<h1>All Employees</h1>

<h2>
  <%= link_to "New employee", new_employee_path, class:"btn btn-sm btn-warning"%>
</h2>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Name</th>
      <th>Active</th>
      <th>Private Number</th>
      <th>Position</th>
      <th>Role</th>
      <th>Branch ID</th>
      <th>Show</th>
      <th>Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
    <tr>
      <td><%=  employee.id %></td>
      <td><%=  employee.name%></td>
      <td><%=  employee.email%></td>
      <td><%=  employee.active%></td>
      <td><%=  employee.private_number%></td>
      <td><%=  employee.position%></td>
      <td><%=  employee.role%></td>
      <td><%=  employee.branch_id%></td>
      <td><%= link_to "Show", employee_path(employee), class:"btn btn-sm btn-dark"%></td>
      <td>
        <%= link_to "Edit", edit_employee_path(employee), class:"btn btn-sm btn-warning"%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>




