<div class='container my-2'>
  <div class='d-flex justify-content-end'>
    <% if user_signed_in? %>
      <%= button_to("Sign out", destroy_user_session_path, method: :delete, class: 'btn btn-lg btn-danger') %>
    <% else %>
      <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-lg btn-primary' %>
    <% end %>
  </div>
  <div class='check-container mx-auto'>
    <div class='card mt-3'>
      <div class='card-header'>
        <% if user_signed_in? %>
          Welcome back!
          <strong>
            <%= current_user.name %>
          </strong>.
        <% else %>
          Register your entry
        <% end %>
      </div>
      <div class="card-body">
        <div class='text-center my-5'>
          <h1 id='counter'></h1>
        </div>
        <%= form_with url: '/check', method: :post do |form| %>
          <div class='input-group mb-3'>
            <%= form.text_field(:private_number, placeholder: 'Private number', class: 'form-control') %>
            <%= form.submit('Check', class: 'btn btn-outline-secondary') %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
