<h1>checkin clock</h1>

<div class="container-fluid">
  <h2 class="clocktower">Time</h2>
  <span id="counter"></span>
</div>

<div class="container-fluid">
  <p>
    Register your entry:
  </p>

  <%= form_with url: "/check", method: :post do |form| %>
    <div>
      <label>Private Number</label>
      <%= form.text_field(:private_number, placeholder: "Example: 12345") %>
    </div>
    <%= form.submit("Check", class: "btn btn-success") %>
  <% end %>
</div>
